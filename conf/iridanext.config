iridanext {
    enabled = true
    output {
        path = "${params.outdir}/iridanext.output.json.gz"
        overwrite = true
        files {
            idkey = "irida_id"
            global = []
        }
        metadata {
            samples {
                keep = [
                    "genomic_address_name"
                ]
                csv {
                    path = "**/filter/new_addresses.tsv"
                    sep = "\t"
                    idcol = 'irida_id'
                }
            }
        }
    }
}
